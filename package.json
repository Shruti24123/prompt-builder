{
  "name": "prompt-builder",
  "displayName": "Prompt Builder",
  "description": "Highlights existing file references inside txt files using <<folder:file.txt>> syntax and provides an Expand/Collapse action to view referenced file content without modifying the original file.",
  "version": "1.2.0",
  "publisher": "sarveshsinghchauhan",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prompt-builder.toggleExpand",
        "title": "Expand/Collapse file reference"
      }
    ],
    "languages": [
      {
        "id": "plaintext",
        "extensions": [
          ".txt"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.19.14",
    "@types/vscode": "^1.93.0",
    "typescript": "^5.6.3",
    "vsce": "^2.15.0"
  },
  "author": {
    "name": "Sarvesh Singh Chauhan",
    "email": "sarvesh.s.chauhan.00@gmail.com"
  },
  "license": "MIT"
}
